---
layout: home.njk
title: Pages
subtitle: A digital garden.
---

<div class="all-cards">
  {%- for post in collections.pages -%}
    <div class="single-card">
      <ul class="tags">
        {%- for tag in post.data.tags -%}
          {%- if tag != 'pages' -%}
            <li><a href="/tags/{{ tag }}/">{{ tag }}</a></li>
          {%- endif %}
        {%- endfor %}
      </ul>
      <h2><a href="{{ post.data.url }}">{{ post.data.title }}</a></h2>
      <p>{{ post.data.subtitle }}</p>
    </div>
  {%- endfor %}
</div>
